@model CRDUASPProject.Models.Book

<form method="post">
    <div class="border" style="padding:2%">
        <div class="row">
            <h2 class="text-primary">Book contruction zone</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="id">id</label>
            @if (@Model.id == null)
            {
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            }
            else
            {
                <label asp-for="id" class="form-control">@Model.id</label>
            }
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Create a book</button>
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">go back</a>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
