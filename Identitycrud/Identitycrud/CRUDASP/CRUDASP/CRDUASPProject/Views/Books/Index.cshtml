@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Books List</h1>
<div class="container p-4">
    <div class="row pt-4">
    <div class="col-6">
        <h2>random text here</h2>
    </div>
    <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create new button </a>
    </div>
</div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
                ID
            </th>
            <th>
                Date 
            </th>
            <th>
                Update/Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.id
                </td>
                <td>
                    @obj.CreateDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Books" asp-action="Update" asp-route-id="@obj.id" class="btn btn-primary"><i class="bi bi-pencil"></i> &nbsp; Update</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger"><i class="bi bi-trash3"></i> &nbsp</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>